<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.login.Activity_Login">

    <include
        layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/findselectscrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/findEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:background="@drawable/profile_save"
            android:text="@string/findID"
            android:textStyle="bold"
            android:textColor="@color/WHITE" />

        <Button
            android:id="@+id/findPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:background="@drawable/profile_save"
            android:text="@string/findPW"
            android:textStyle="bold"
            android:textColor="@color/WHITE" />
    </LinearLayout>
    </ScrollView>
    <!--Toolbar-->
</androidx.constraintlayout.widget.ConstraintLayout>